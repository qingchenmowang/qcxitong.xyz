// $main-width: A calc value.
// -----------------------------------------
@media (min-width: $main-width) {
  if (hexo-config('sidebar.enable')) {
    .header-nav-inner {
      width: $main-width;
    }
  }

  .main-inner {
    width: $main-width;
  }
}

// $md-width: 992px - 0.02px
// -----------------------------------------
@media (min-width: $md-width) {
  if (!hexo-config('sidebar.enable')) {
    .header-nav-inner {
      width: $md-width;
    }
  }

  .header {
    &-nav {
      &-menu {
        display: inline-block !important;
        opacity: 1 !important;
      }

      &-submenu {
        border-radius: 3px;
      }
    }
  }
}

// $md-width: 992px - 0.02px
// -----------------------------------------
@media (max-width: $md-width) {
  .header {
    &-inner {
      height: 17rem;
    }

    &-nav {
      &-btn {
        display: block;
        float: left;
      }

      &-menu {
        overflow: hidden;
        position: absolute;
        top: header-nav-height;
        right: 0;
        left: 0;
        width: auto;
        height: auto;
        background-color: $header-nav-bg-color;

        &-item {
          float: none;
          overflow: hidden;
          margin: 0;

          &__a {
            padding-right: 1.5rem;
            padding-left: 1.5rem;
            text-align: left;
            color: #f4f5f5;
          }
        }
      }

      &-submenu {
        display: block;
        position: initial;
        width: 100%;

        &-item {
          &__a {
            padding-right: 1rem;
            padding-left: 3rem;
            text-align: left;
          }
        }
      }
    }
  }

  .content-wrap {
    width: 100%;
  }

  if (hexo-config('sidebar.enable')) {
    .sidebar {
      display: none;
    }
  }

  .post-list .post {
    margin: 0 0 1rem;
    padding: 1rem;
  }
}

// sm-width: 768px - 0.02px
// -----------------------------------------
@media (max-width: $sm-width) {
  .header {
    &-nav {
      &-inner {
        padding: convert(hexo-config('layout.main_padding.tablet') || '15px');
      }
    }

    &-info {
      &-title {
        font-size: 3rem;
      }

      &-subtitle {
        font-size: .9rem;
      }
    }
  }

  .main-inner {
    padding: convert(hexo-config('layout.main_padding.tablet') || '15px');
  }

  if (hexo-config('algolia_search.enable') || hexo-config('local_search.enable')) {
    .search {
      &-popup {
        top: 0;
        left: 0;
        margin: 0;
        border-radius: 0;
        width: 100%;
        height: 100vh;
        max-height: 100vh;
      }

      &-results {
        max-height: 'calc(100vh - %s)' % search-results-height;
      }
    }
  }
}

// xs-width: 576px - 0.02px
// -----------------------------------------
@media (max-width: $xs-width) {
  .header {
    &-inner {
      height: 13rem;
    }

    &-nav {
      &-inner {
        padding: convert(hexo-config('layout.main_padding.mobile') || '10px');
      }

      if (hexo-config('algolia_search.enable') || hexo-config('local_search.enable')) {
        &-search {
          span {
            display: none;
          }
        }
      }
    }

    &-info {
      &-title {
        font-size: 2rem;
      }

      &-subtitle {
        font-size: $font-size-base;
      }
    }
  }

  .main-inner {
    padding: convert(hexo-config('layout.main_padding.mobile') || '10px');
  }

  .content,
  .comments {
    padding: .6rem .8rem;
    font-size: $font-size-base + 1px;
  }

  .archive {
    margin-left: .5rem;

    &-total {
      padding-left: 1rem;
    }
  }

  .post-timeline {
    &-item {
      padding-left: 1rem;
    }
  }

  .post-list .post {
    margin: 0 0 .8rem;
    padding: .8rem;
  }

  if (hexo-config('algolia_search.enable')) {
    .algolia-hit-item {
      margin: 0;
    }
  }

  if (hexo-config('gallery_waterfall.enable')) {
    .gallery__img {
      width: 100%;
    }
  }

  .friends-plugin {
    &__item {
      margin: 0;
      padding: .5rem 1rem;
      width: 100%;
    }
  }
}
